extends layout
block body
    - void addGame(Game game)
        .game
            a(href="/games/"~game.id)
                .gameblock
                    h2=game.gameName

    - auto games = Game.search(searchTerm, 0, 20, showUnapproved);
    .widget
        .widget-title
            h2="Games"
        
        - foreach(game; games)
            - addGame(game);